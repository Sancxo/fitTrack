<div class="text-center my-3">
  <h1>Your activities</h1>

  <% if params[:uid].to_i == current_user.id %>
    <%= link_to "New activity", new_activity_path, class: "btn btn-green mt-2" %>
  <% end %>

  <div id="activities" class="container p-3 mx-auto row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
    <% @activities.each do |activity| %>
        <%= render partial: "activity_card", locals: {activity: activity} %>
    <% end %>
  </div>
</div>
