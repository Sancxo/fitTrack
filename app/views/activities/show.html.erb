<div  id="activity" class="container w-50 text-center border border-orange rounded my-3 p-3 bg-light">
  <%= render @activity %>

  <div>
    <% if @activity.user_id == current_user.id %>
      <%= link_to "Edit this activity", edit_activity_path(@activity) %> | <%= link_to "Back to your activities", user_activities_path(@activity.user_id) %>
    <% else %>
      <%= link_to "Back to #{getUserFirstName(@activity.user_id)}'s activities", user_activities_path(@activity.user_id) %>
    <% end %>
    

    <%= button_to "Destroy this activity", @activity, method: :delete, class: "btn btn-danger mt-3", data: {confirm: "Are you sure?"} if @activity.user_id == current_user.id %>
  </div>
</div>
